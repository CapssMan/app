<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Инвестиции -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Инвестиции и финансирование"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/initial_investment_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Первоначальные инвестиции (₽)"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/development_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Разработка продукта (₽)"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/marketing_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Маркетинг (₽)"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Ежемесячные расходы -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ежемесячные расходы"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/salaries_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Зарплаты (₽/мес)"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/rent_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Аренда (₽/мес)"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Доходы -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Доходы"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/clients_year1_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Количество клиентов (Год 1)"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/clients_year2_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Количество клиентов (Год 2)"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/avg_check_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Средний чек (₽/мес)"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Финансовые показатели -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Финансовые показатели"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/TextAppearance.AppCompat.Caption">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/discount_rate_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ставка дисконтирования (например, 0.15 для 15%)"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tax_rate_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Налоговая ставка (например, 0.2 для 20%)"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Дополнительные параметры -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Дополнительные параметры"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/calculation_period_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Срок расчёта (лет)"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Кнопки -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/saas_template_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Шаблон SaaS" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/calculate_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Рассчитать" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/export_pdf_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Экспорт в PDF" />

        <!-- Результаты -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/result_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Результаты появятся здесь" />

        <!-- График -->
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/cash_flow_chart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>