<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Общие параметры -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Общие параметры"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/property_type_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/property_type_prompt" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/property_cost_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Стоимость объекта (руб)"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/down_payment_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Первоначальный взнос (руб или %)"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ownership_period_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Срок владения (лет)"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Финансирование -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Финансирование"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/mortgage_rate_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ставка по ипотеке (%)"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/mortgage_term_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Срок кредита (лет)"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:id="@+id/payment_type_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/payment_type_prompt" />

        <!-- Доходы и расходы -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Доходы и расходы"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/rent_income_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Арендный доход (руб/мес)"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/utilities_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Коммунальные (руб/мес)"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tax_rate_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Налог на доход (%)"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/cap_expenses_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Капитальные расходы (руб/год)"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Рыночные параметры -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Рыночные параметры"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inflation_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Инфляция (%)"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/market_growth_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Рост стоимости недвижимости (%)"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Кнопки -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/load_rates_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Загрузить ставки ЦБ" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/pessimistic_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Пессимистичный сценарий" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/optimistic_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Оптимистичный сценарий" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/calculate_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Рассчитать" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/export_excel_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Экспорт в Excel" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/export_pdf_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Экспорт в PDF" />

        <!-- Результаты -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/result_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Результаты появятся здесь" />

        <!-- График -->
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/cash_flow_chart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
